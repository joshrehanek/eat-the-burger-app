<h1>Eat the Burger</h1>

<div class="container-lg">
  <div class="row">
    <div class="col-6">
        <h3>Eat Me</h3>
        {{#each burgers}}
        {{#unless devoured}}
        {{> devoured/devoured devoured=false}}
        <p>{{this.burger_name}}</p>
        {{/unless}}
        {{/each}}
    </div>
    <div class="col-6">
        <h3>Make Me to Eat Me Again</h3>
        {{#each burgers}}
        {{#if devoured}}
        {{> devoured/devoured devoured=true}}
        <p>{{this.burger_name}}</p>
        {{/if}}
        {{/each}}
    </div>
  </div>





  <h3>Add Mo Burgers</h3>
  <div class="create-form">

    <div class="form-group">
      <label for="newBurger">Burger Name:</label>
      <input type="text" id="newBurger" name="burger_name" required>
    </div>

    <button class="createBurger btn btn-danger" type="submit">MAKE DAT BURGER</button>
    </form>
  </div>